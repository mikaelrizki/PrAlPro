print("="*10,"PROGRAM PENGHITUNG PERCEPATAN","="*10)
vt = int(input("Kecepatan akhir (m/s) = "))
v0 = int(input("Kecepatan awal (m/s) = "))
s = int(input("Jarak tempuh (m) = "))

a = ((vt**2)-(v0**2))/(2*s)

print("Jadi percepatannya adalah %.1f m/s^2" % (a))

breakpoint

print("~"*10,"PROGRAM PENGATUR KEUANGAN","~"*10)
saldo = int(input("Masukkan jumlah uang jajan mingguan : "))
start = int(input("Awal menabung pada bulan ke-"))
stop = int(input("Akhir menabung pada bulan ke-"))

dana =saldo*(stop-start+1)*4

makan = 0.5*dana
kuliah = 0.2*dana
tabungan = 0.3*dana

print("Total uang untuk keperluan makan :",makan)
print("Total uang untuk keperluan kuliah :",kuliah)
print("Total tabungan :",tabungan)

breakpoint

print("*"*10,"PROGRAM PENGHITUNG KEUNTUNGAN","*"*10)
print()

print("-"*10,"GRADE A","-"*10)
beli1=int(input("Harga beli = "))
jual1=int(input("Harga jual = "))
berat1=int(input("Jumlah penjualan (dalam kg) = "))

laba1=jual1*berat1
keuntungan1=((jual1-beli1)*berat1)
persen1=keuntungan1*100/(beli1*berat1)

print("Penghasilan kotor penjualan apel grade A = Rp",laba1)
print("Keuntungan dalam persen ->",round((persen1),2),"%")
print("Keuntungan penjualan",berat1,"kg apel grade A adalah Rp ",keuntungan1)
print()

print("-"*10,"GRADE B","-"*10)
