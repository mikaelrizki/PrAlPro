jual2=int(input("Harga jual = "))
berat2=int(input("Jumlah penjualan (dalam kg) = "))

laba2=jual2*berat2
keuntungan2=((jual2-beli2)*berat2)
persen2=keuntungan2*100/(beli2*berat2)

print("Penghasilan kotor penjualan apel grade B = Rp",laba2)
print("Keuntungan dalam persen ->",round((persen2),2),"%")
print("Keuntungan penjualan",berat2,"kg apel grade B adalah Rp ",keuntungan2)
print()

